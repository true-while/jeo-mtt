@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">Access Denied!</h4>
        <p>You do not have permission to access this resource. Please log in to continue.</p>
        <hr>
        <div>
            <a asp-controller="User" asp-action="Login" class="btn btn-primary">Go to Login</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Go Home</a>
        </div>
    </div>
</div>
