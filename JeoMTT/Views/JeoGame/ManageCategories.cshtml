@model JeoMTT.Models.JeoGame

@{
    ViewData["Title"] = "Create Question Groups";
}

<link rel="stylesheet" href="~/css/manage-categories.css" asp-append-version="true" />

<div class="manage-categories-container">
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h4 class="mb-0">@ViewData["Title"]</h4>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Add up to 5 question groups (categories) for your game</p>

                        <!-- Add Category Form -->
                        @if (Model.Categories.Count >= 5)
                        {
                            <div class="alert alert-warning" role="alert">
                                <i class="bi bi-exclamation-triangle"></i>
                                <strong>Maximum limit reached!</strong> You have already created 5 groups. This is the maximum allowed.
                            </div>
                        }

                        <form id="addCategoryForm" class="needs-validation category-form" data-game-id="@Model.Id">
                            <div class="mb-3">
                                <label for="categoryName" class="form-label">Group Name <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="categoryName" name="categoryName" 
                                           placeholder="e.g., Science, History, Sports..." required
                                           @(Model.Categories.Count >= 5 ? "disabled" : "") />
                                    <button class="btn btn-primary" type="submit" id="addCategoryBtn"
                                            @(Model.Categories.Count >= 5 ? "disabled" : "")>
                                        <i class="bi bi-plus-circle"></i> Add Group
                                    </button>
                                </div>
                                <small class="text-muted">Enter a unique name for your question group.</small>
                                <div id="categoryError" class="invalid-feedback d-block category-error"></div>
                            </div>
                        </form>

                        <!-- Categories List -->
                        @if (Model.Categories.Any())
                        {
                            <div class="categories-section">
                                <h6 class="mt-4 mb-3">Your Groups</h6>
                                <form id="reorderCategoriesForm" method="post" action="@Url.Action("ReorderCategories", "JeoGame")">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="gameId" value="@Model.Id" />
                                    <div class="categories-grid" id="categoriesGrid">
                                        @foreach (var category in Model.Categories.OrderBy(c => c.DisplayOrder))
                                        {
                                            <div class="category-square draggable" draggable="true" data-category-id="@category.Id">
                                            <span class="drag-handle" title="Drag to reorder"><i class="bi bi-grip-vertical"></i></span>
                                                <button type="button" class="remove-category-btn" 
                                                        data-category-id="@category.Id" data-category-name="@category.Name"
                                                        title="Remove this group">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                                <div class="category-name">@category.Name</div>
                                                <input type="hidden" name="categoryOrder" value="@category.Id" />
                                            </div>
                                        }
                                    </div>
                                </form>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info mt-3" role="alert">
                                <i class="bi bi-info-circle"></i>
                                <strong>No groups yet!</strong> Add your first question group to get started.
                            </div>
                        }

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="GameList" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <div class="d-flex gap-2">
                                <form method="post" action="@Url.Action("SaveAndReturnToGames", "JeoGame")" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="gameId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-primary" @(Model.Categories.Count == 0 ? "disabled" : "")>
                                        <i class="bi bi-check-circle"></i> Save & Return to Games
                                    </button>
                                </form>
                                <form method="post" action="@Url.Action("SaveAndContinueToBoard", "JeoGame")" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="gameId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-success" @(Model.Categories.Count == 0 ? "disabled" : "")>
                                        <i class="bi bi-play-circle"></i> Continue to Board
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/manage-categories.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/manage-categories.js" data-game-id="@Model.Id" asp-append-version="true"></script>
    <script>
        // Enhanced drag-and-drop reorder logic
        const grid = document.getElementById('categoriesGrid');
        let draggedElement = null;
        let draggedFrom = null;
        const gameId = '@Model.Id';

        if (grid) {
            // Add drag listeners to all draggable elements
            function addDragListeners() {
                const draggables = grid.querySelectorAll('.draggable');
                draggables.forEach(item => {
                    item.addEventListener('dragstart', handleDragStart, false);
                    item.addEventListener('dragend', handleDragEnd, false);
                });
            }

            // Add drop zone listeners to grid
            grid.addEventListener('dragover', handleDragOver, false);
            grid.addEventListener('drop', handleDrop, false);

            function handleDragStart(e) {
                draggedElement = this;
                draggedFrom = Array.from(grid.children).indexOf(this);
                this.style.opacity = '0.5';
                this.style.cursor = 'grabbing';
                e.dataTransfer.effectAllowed = 'move';
                e.dataTransfer.setData('text/html', this.innerHTML);
            }

            function handleDragEnd(e) {
                this.style.opacity = '1';
                this.style.cursor = 'grab';
                draggedElement = null;
                // Save the new order after drag ends
                saveOrderToDB();
            }

            function handleDragOver(e) {
                e.preventDefault();
                e.dataTransfer.dropEffect = 'move';
                
                const draggable = grid.querySelector('.draggable[style*="opacity"]');
                if (!draggable || !grid.contains(e.target.closest('.draggable'))) {
                    return;
                }

                const afterElement = getDragAfterElement(grid, e.clientY);
                if (afterElement == null) {
                    grid.appendChild(draggable);
                } else {
                    grid.insertBefore(draggable, afterElement);
                }
            }

            function handleDrop(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            function getDragAfterElement(container, y) {
                const draggableElements = [...container.querySelectorAll('.draggable:not([style*="opacity: 0.5"])')];
                
                return draggableElements.reduce((closest, child) => {
                    const box = child.getBoundingClientRect();
                    const offset = y - box.top - box.height / 2;

                    if (offset < 0 && offset > closest.offset) {
                        return { offset: offset, element: child };
                    } else {
                        return closest;
                    }
                }, { offset: Number.NEGATIVE_INFINITY }).element;
            }

            // Save category order to database
            async function saveOrderToDB() {
                const categoryOrder = Array.from(grid.querySelectorAll('.draggable')).map(el => {
                    return el.dataset.categoryId;
                });

                console.log('Saving order:', { gameId, categoryOrder });

                try {
                    const token = document.querySelector('[name="__RequestVerificationToken"]')?.value || '';
                    const formData = new URLSearchParams();
                    formData.append('gameId', gameId);
                    categoryOrder.forEach((id, index) => {
                        formData.append(`categoryOrder[${index}]`, id);
                    });
                    formData.append('__RequestVerificationToken', token);

                    const response = await fetch('/JeoGame/ReorderCategories', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded'
                        },
                        body: formData.toString()
                    });
                    
                    if (response.ok) {
                        console.log('Order saved successfully');
                        const data = await response.json();
                        console.log('Response:', data);
                    } else {
                        console.error('Error saving category order:', response.status, response.statusText);
                        const text = await response.text();
                        console.error('Response body:', text);
                    }
                } catch (error) {
                    console.error('Error saving category order:', error);
                }
            }

            // Add listeners to new draggable elements when added
            const observer = new MutationObserver(() => {
                addDragListeners();
            });
            observer.observe(grid, { childList: true });

            // Initial setup
            addDragListeners();
        }
    </script>
}
