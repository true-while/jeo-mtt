@model IEnumerable<JeoMTT.Models.JeoGame>

@{
    ViewData["Title"] = "Jeopardy Games";
}

<div class="container-fluid mt-4 game-list-container">
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-12">
                <h1>@ViewData["Title"]</h1>
                <p class="text-muted">Manage your Jeopardy games here</p>
            </div>
        </div>

        <!-- Search Box -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="search-box">
                    <input type="text" id="searchGames" class="form-control" placeholder="Search games by name, description, categories, questions, or answers...">
                    <i class="bi bi-search"></i>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Create New Game Tile -->
            <div class="game-card-wrapper">
                <a asp-action="CreateGame" class="text-decoration-none h-100 game-card-create">
                    <div class="game-card-create-icon">
                        <i class="bi bi-plus-circle"></i>
                    </div>
                    <h5 class="game-card-create-text">Create New Game</h5>
                </a>
            </div>

            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    var categoryCount = item.Categories?.Count ?? 0;
                    var questionCount = item.Categories?.Sum(c => c.Questions?.Count ?? 0) ?? 0;
                    
                    // Build searchable text from all game data
                    var categoryNames = string.Join(" ", item.Categories?.Select(c => c.Name) ?? new List<string>());
                    var allQuestionText = string.Join(" ", item.Categories?.SelectMany(c => c.Questions?.Select(q => q.Text + " " + q.Answer) ?? new List<string>()) ?? new List<string>());
                    var searchableText = (item.Name + " " + item.Description + " " + categoryNames + " " + allQuestionText).ToLower();

                    <div class="game-card-wrapper" data-searchable="@searchableText">
                        <div class="card game-card">
                            <div class="game-card-body">
                                <h5 class="game-card-title">@item.Name</h5>
                                
                                <div class="game-card-info-divider">
                                    <ul class="game-card-info-list">
                                        <li class="game-card-info-item">
                                            <span class="game-card-info-label">Categories:</span>
                                            <span class="game-card-info-value">@categoryCount</span>
                                        </li>
                                        <li class="game-card-info-item">
                                            <span class="game-card-info-label">Questions:</span>
                                            <span class="game-card-info-value">@questionCount</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div class="game-card-footer">
                                <div class="game-card-buttons">
                                    <a asp-action="EditGame" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="DeleteGame" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }           
        }
        else
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <strong>No games yet!</strong> Start by creating your first Jeopardy game.
                <a asp-action="CreateGame" class="alert-link">Create Now</a>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchGames');
            const gameCards = document.querySelectorAll('.game-card-wrapper[data-searchable]');

            if (searchInput) {
                searchInput.addEventListener('keyup', function() {
                    const searchTerm = this.value.toLowerCase().trim();
                    let visibleCount = 0;

                    gameCards.forEach(card => {
                        const searchableText = card.dataset.searchable || '';
                        const isVisible = searchableText.includes(searchTerm);

                        if (isVisible) {
                            card.style.display = '';
                            visibleCount++;
                        } else {
                            card.style.display = 'none';
                        }
                    });

                    // Track search event
                    if (window.trackEvent && searchTerm) {
                        trackEvent('GamesSearched', {
                            'searchTerm': searchTerm,
                            'resultsFound': visibleCount.toString()
                        });
                    }
                });
            }
        });

        // Track page load performance
        const indexPageStart = performance.now();
        
        window.addEventListener('load', function() {
            const loadTime = performance.now() - indexPageStart;
            if (window.trackEvent) {
                trackEvent('JeoGameIndex_PageLoadComplete', {
                    'loadTimeMs': loadTime.toFixed(2),
                    'gameCount': '@Model.Count()'
                });
            }
        });

        // Track game interactions
        document.querySelectorAll('[class*="btn-outline"]').forEach(button => {
            button.addEventListener('click', function(e) {
                const actionText = this.title || this.innerText.trim();
                const href = this.getAttribute('href');
                const gameId = href ? href.match(/\d+/)?.[0] : 'unknown';
                
                if (window.trackEvent) {
                    trackEvent('JeoGameAction', {
                        'action': actionText,
                        'gameId': gameId
                    });
                }
            });
        });

        // Track Create button clicks
        document.querySelectorAll('[class*="btn-primary"]').forEach(button => {
            if (button.textContent.includes('Create')) {
                button.addEventListener('click', function() {
                    if (window.trackEvent) {
                        trackEvent('JeoGameCreateClicked', {
                            'source': 'index_page'
                        });
                    }
                });
            }
        });
    </script>
}
