@model JeoMTT.Models.JeoGame

@{
    ViewData["Title"] = "Edit Game";
}

<link rel="stylesheet" href="~/css/edit-game.css" />

<div class="edit-game-container">
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h4 class="mb-0">@ViewData["Title"]</h4>
                    </div>
                <div class="card-body">
                    <div class="game-info-header">
                        <span class="game-info-label">Created:</span>
                        <span class="game-info-value">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</span>
                        <span class="game-info-separator">â€¢</span>
                        <span class="game-info-label">Author:</span>
                        <span class="game-info-value">@Model.Author</span>
                    </div>

                    <form asp-action="EditGame" method="post" id="editGameForm">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>Validation Errors:</strong>
                                <ul class="mb-0">
                                    @foreach (var modelState in ViewData.ModelState.Values)
                                    {
                                        @foreach (var error in modelState.Errors)
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    }
                                </ul>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Game Name <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control @(ViewData.ModelState["Name"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Enter game name" />
                            @if (ViewData.ModelState["Name"]?.Errors.Count > 0)
                            {
                                <div class="invalid-feedback d-block">
                                    @ViewData.ModelState["Name"].Errors.FirstOrDefault()?.ErrorMessage
                                </div>
                            }
                            <span asp-validation-for="Name" class="text-danger small d-block mt-1"></span>
                            <small class="text-muted">Update the name of your Jeopardy game.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control @(ViewData.ModelState["Description"]?.Errors.Count > 0 ? "is-invalid" : "")" rows="2" placeholder="Enter a description of your game..."></textarea>
                            @if (ViewData.ModelState["Description"]?.Errors.Count > 0)
                            {
                                <div class="invalid-feedback d-block">
                                    @ViewData.ModelState["Description"].Errors.FirstOrDefault()?.ErrorMessage
                                </div>
                            }
                            <span asp-validation-for="Description" class="text-danger small d-block mt-1"></span>
                            <small class="text-muted">Optional: Briefly describe what this game is about.</small>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="GameList" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary" name="button" value="save">
                                    <i class="bi bi-check-circle"></i> Save
                                </button>
                                <button type="submit" class="btn btn-success" name="button" value="next">
                                    <i class="bi bi-arrow-right"></i> Next: Manage Categories
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/edit-game.js"></script>
}
