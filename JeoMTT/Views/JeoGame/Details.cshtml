@model JeoMTT.Models.JeoGame

@{
    ViewData["Title"] = "Game Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Game Name</h5>
                            <p class="text-primary fs-5"><strong>@Model.Name</strong></p>
                        </div>
                        <div class="col-md-6">
                            <h5>Author</h5>
                            <p class="fs-5"><strong>@Model.Author</strong></p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Created Date</h5>
                            <p class="fs-5"><strong>@Model.CreatedAt.ToString("MMMM dd, yyyy")</strong></p>
                            <small class="text-muted">@Model.CreatedAt.ToString("h:mm tt")</small>
                        </div>
                        <div class="col-md-6">
                            <h5>Game ID</h5>
                            <p class="fs-5"><strong>@Model.Id</strong></p>
                        </div>
                    </div>

                    <hr />

                    <div class="mb-4">
                        <h5>Description</h5>
                        @if (string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="text-muted"><em>No description provided.</em></p>
                        }
                        else
                        {
                            <p class="fs-5">@Model.Description</p>
                        }
                    </div>                    <div class="alert alert-secondary" role="alert">
                        <small>
                            <strong>Last Updated:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy h:mm tt")
                        </small>
                    </div>

                    <!-- Categories and Questions Grid -->
                    @if (Model.Categories.Any())
                    {
                        <hr />
                        <h5 class="mt-4 mb-3">Questions Summary (@Model.Categories.Count categories)</h5>
                        <div class="questions-grid">
                            <!-- Header with Category Names -->
                            <div class="grid-header">
                                <div class="header-cell"></div>
                                @foreach (var category in Model.Categories)
                                {
                                    <div class="header-cell">@category.Name</div>
                                }
                            </div>

                            <!-- Question Rows -->
                            @foreach (var points in new[] { 100, 200, 300, 400, 500 })
                            {
                                <div class="grid-row">
                                    <div class="row-label">@points pts</div>
                                    @foreach (var category in Model.Categories)
                                    {
                                        var question = category.Questions.FirstOrDefault(q => q.Points == points);
                                        <div class="grid-cell">
                                            @if (question != null)
                                            {
                                                <div class="question-card">
                                                    <div class="question-text">@question.Text</div>
                                                    <hr class="divider" />
                                                    <div class="answer-text">A: @question.Answer</div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="empty-cell">â€”</div>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <hr />
                        <div class="alert alert-warning mt-3" role="alert">
                            <i class="bi bi-info-circle"></i> No categories created yet.
                        </div>
                    }                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Games
                        </a>
                        <div class="btn-group" role="group">
                            @if (Model.Categories.Any())
                            {
                                <a asp-action="PlayBoard" asp-route-id="@Model.Id" class="btn btn-success">
                                    <i class="bi bi-grid-3x3"></i> Edit Board
                                </a>
                            }
                            <a asp-action="ManageCategories" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="bi bi-tag"></i> Manage Categories
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 0.5rem;
    }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0;
        padding: 1.25rem;
    }

    .card-body {
        padding: 2rem;
    }

    h5 {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        font-size: 0.875rem;
        letter-spacing: 0.5px;
    }

    .text-primary {
        color: #0d6efd !important;
    }

    .btn {
        font-weight: 500;
        padding: 0.5rem 1.5rem;
    }

    hr {
        margin: 1.5rem 0;
    }    .alert-secondary {
        background-color: #e2e3e5;
        border-color: #d3d4d5;
        color: #383d41;
    }

    /* Questions Grid Styles */
    .questions-grid {
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        overflow-x: auto;
        background-color: #f8f9fa;
    }

    .grid-header {
        display: grid;
        grid-template-columns: 100px repeat(auto-fit, minmax(150px, 1fr));
        gap: 1px;
        background-color: #dee2e6;
        padding: 1px;
    }

    .header-cell {
        background-color: #0d6efd;
        color: white;
        padding: 12px 8px;
        font-weight: 600;
        text-align: center;
        font-size: 0.9rem;
        word-wrap: break-word;
        min-height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .grid-row {
        display: grid;
        grid-template-columns: 100px repeat(auto-fit, minmax(150px, 1fr));
        gap: 1px;
        background-color: #dee2e6;
        padding: 1px;
    }

    .row-label {
        background-color: #e7f3ff;
        padding: 12px 8px;
        font-weight: 600;
        text-align: center;
        color: #0d6efd;
        font-size: 0.9rem;
    }

    .grid-cell {
        background-color: white;
        padding: 8px;
        min-height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .question-card {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 8px;
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        background-color: #fff3cd;
        font-size: 0.85rem;
    }

    .question-text {
        font-weight: 500;
        color: #000;
        line-height: 1.3;
        flex-grow: 1;
        overflow-y: auto;
        max-height: 50px;
    }

    .divider {
        margin: 4px 0;
        border: none;
        border-top: 1px solid #dee2e6;
    }

    .answer-text {
        color: #666;
        font-size: 0.8rem;
        font-style: italic;
        overflow-y: auto;
        max-height: 30px;
    }    .empty-cell {
        color: #999;
        font-size: 1.5rem;
        font-weight: 300;
    }

    @@media (max-width: 768px) {
        .grid-header,
        .grid-row {
            grid-template-columns: 80px repeat(auto-fit, minmax(120px, 1fr));
        }

        .header-cell,
        .row-label {
            padding: 10px 6px;
            font-size: 0.8rem;
            min-height: 50px;
        }

        .grid-cell {
            min-height: 100px;
            padding: 6px;
        }

        .question-card {
            padding: 6px;
        }

        .question-text {
            font-size: 0.75rem;
            max-height: 40px;
        }

        .answer-text {
            font-size: 0.7rem;
            max-height: 25px;
        }
    }
</style>

@section Scripts {
    <script>
        // Track page view
        document.addEventListener('DOMContentLoaded', function() {
            if (window.trackEvent) {
                trackEvent('JeoGameDetailsViewed', {
                    'gameId': '@Model.Id',
                    'gameName': '@Html.Raw(Model.Name)',
                    'author': '@Html.Raw(Model.Author)'
                });
            }
        });

        // Track action button clicks
        document.querySelectorAll('.btn').forEach(button => {
            button.addEventListener('click', function() {
                const actionText = this.textContent.trim();
                if (window.trackEvent && (actionText.includes('Edit') || actionText.includes('Delete'))) {
                    trackEvent('JeoGameDetailsActionClicked', {
                        'gameId': '@Model.Id',
                        'action': actionText
                    });
                }
            });
        });
    </script>
}
