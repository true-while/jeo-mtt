@model JeoMTT.Models.JeoGame

@{
    ViewData["Title"] = "Game Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Game Name</h5>
                            <p class="text-primary fs-5"><strong>@Model.Name</strong></p>
                        </div>
                        <div class="col-md-6">
                            <h5>Author</h5>
                            <p class="fs-5"><strong>@Model.Author</strong></p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Created Date</h5>
                            <p class="fs-5"><strong>@Model.CreatedAt.ToString("MMMM dd, yyyy")</strong></p>
                            <small class="text-muted">@Model.CreatedAt.ToString("h:mm tt")</small>
                        </div>
                        <div class="col-md-6">
                            <h5>Game ID</h5>
                            <p class="fs-5"><strong>@Model.Id</strong></p>
                        </div>
                    </div>

                    <hr />

                    <div class="mb-4">
                        <h5>Description</h5>
                        @if (string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="text-muted"><em>No description provided.</em></p>
                        }
                        else
                        {
                            <p class="fs-5">@Model.Description</p>
                        }
                    </div>

                    <div class="alert alert-secondary" role="alert">
                        <small>
                            <strong>Last Updated:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy h:mm tt")
                        </small>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Games
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 0.5rem;
    }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0;
        padding: 1.25rem;
    }

    .card-body {
        padding: 2rem;
    }

    h5 {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        font-size: 0.875rem;
        letter-spacing: 0.5px;
    }

    .text-primary {
        color: #0d6efd !important;
    }

    .btn {
        font-weight: 500;
        padding: 0.5rem 1.5rem;
    }

    hr {
        margin: 1.5rem 0;
    }

    .alert-secondary {
        background-color: #e2e3e5;
        border-color: #d3d4d5;
        color: #383d41;
    }
</style>

@section Scripts {
    <script>
        // Track page view
        document.addEventListener('DOMContentLoaded', function() {
            if (window.trackEvent) {
                trackEvent('JeoGameDetailsViewed', {
                    'gameId': '@Model.Id',
                    'gameName': '@Html.Raw(Model.Name)',
                    'author': '@Html.Raw(Model.Author)'
                });
            }
        });

        // Track action button clicks
        document.querySelectorAll('.btn').forEach(button => {
            button.addEventListener('click', function() {
                const actionText = this.textContent.trim();
                if (window.trackEvent && (actionText.includes('Edit') || actionText.includes('Delete'))) {
                    trackEvent('JeoGameDetailsActionClicked', {
                        'gameId': '@Model.Id',
                        'action': actionText
                    });
                }
            });
        });
    </script>
}
